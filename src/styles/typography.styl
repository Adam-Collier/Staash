html, body
    width: 100%
    height: 100%
    position: relative
    overflow: hidden

html
    font-size: 16px

body
    font-family: 'Inter UI', Helvetica, Arial, sans-serif
    font-weight: 500
    line-height: 1.45
    color: #333
    margin: 0

p
    margin-bottom: 1.3rem

h1, h2, h3, h4
    margin: 1.414rem 0 0.5rem
    font-weight: inherit
    line-height: 1.2

h1
    margin: 0
    font-size: 2rem
    font-weight: 700

h2
    font-size: 1.728rem

h3
    font-size: 1.44rem

h4
    font-size: 1.2rem

small, .font_small
    font-size: 0.833rem

a
    font-size: 0.8rem
    font-weight: 500
    color: #000000
    text-decoration: none

    &:hover
        text-decoration: underline

input
    &:focus
        outline: none

@media (max-width: 500px)
    body, html
        background: #363636
