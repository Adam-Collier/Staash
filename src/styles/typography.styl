html, body
    width: 100%
    height: 100%
    position: relative
    overflow: hidden

html
    font-size: 1em

body
    font-family: 'Inter UI', Helvetica, Arial, sans-serif
    font-weight: 500
    line-height: 1.45
    color: #333
    margin: 0

p
    margin-bottom: 1.3em

h1, h2, h3, h4
    margin: 1.414em 0 0.5em
    font-weight: inherit
    line-height: 1.2

h1
    margin-top: 0
    font-size: 2.074em

h2
    font-size: 1.728em

h3
    font-size: 1.44em

h4
    font-size: 1.2em

small, .font_small
    font-size: 0.833em

a
    font-size: 0.8em
    font-weight: 500
    color: #000000
    text-decoration: none

    &:hover
        text-decoration: underline

input
    &:focus
        outline: none

@media (max-width: 500px)
    body, html
        background: #363636
